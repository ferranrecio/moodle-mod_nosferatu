{{!
    @template mod_nosferatu/local/beginner/city

    This component renders all people in the city.

    Example context (json):
    {
    }
}}
<div  id="mod-nosferatu-city-{{uniqid}}">
    {{^haspeople}}
    <div data-for="emptycity">
        This city is empty.
    </div>
    {{/haspeople}}
    {{#haspeople}}
    <ul class="mod_nosfetaru_city" data-for="people">
        {{#people}}
        <li data-for="person" class="citizen" data-id="{{id}}">
            <p data-for="personname">
                {{name}}
                <span class="isbitten badge badge-danger float-right">Bitten!</span>
            </p>
        </li>
        {{/people}}
    </ul>
    {{/haspeople}}
</div>
{{#js}}
require(['mod_nosferatu/local/beginner/city'], function(component) {
    component.init('#mod-nosferatu-city-{{uniqid}}');
});
{{/js}}
